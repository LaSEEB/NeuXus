<?xml version="1.0"?>
<config>
        <info>
                <name>Graz Motor Imagery</name>
                <author>S.Legeay</author>
                <number_of_trials>20</number_of_trials>
                <!-- each class appear number_of_trials times -->
                <marker_type>string</marker_type>
                <!-- among [float32, string, int32, int16, int8, int64] be carefull ta add convertible name of step-->
                <stream_name>MyMarkerStream</stream_name>
        </info>
        <!-- Classes which appear in the loops -->
        <classes>
                <class>
                        <name>LEFT ARROW</name>
                </class>
                <class>
                        <name>RIGHT ARROW</name>
                </class>
        </classes>
        <!-- Initalzation of the experiment -->
        <init>
                <step>
                        <name>ExperimentStart</name>
                        <duration>5</duration>
                </step>
                <step>
                        <name>BaselineStart</name>
                        <duration>20</duration>
                </step>
                <step>
                        <name>BaselineStop</name>
                        <duration>5</duration>
                </step>
        </init>
        <!-- The loop is repeated number_of_trials * nb_of_classes times -->
        <loop>
                <step>
                        <name>StartOfTrial and CrossOnScreen</name>
                        <duration>1</duration>
                </step>
                <step>
                        <name>Class</name>
                        <!-- Class will be replaced by classes specified before -->
                        <duration>1.25</duration>
                </step>
                <step>
                        <name>FeedbackContinuous</name>
                        <duration>2</duration>
                </step>
                <step>
                        <name>EndOfTrial</name>
                        <min_duration>1</min_duration>
                        <max_duration>3.75</max_duration>
                </step>
        </loop>
        <!-- End of the experiment -->
        <end>
                <step>
                        <name>EndOfSession</name>
                        <duration>5</duration>
                </step>
                <step>
                        <name>ExperimentStop</name>
                        <duration>5</duration>
                </step>
        </end>
</config>
